---
// Pixelated rotating Earth component
---

<div class="pixel-earth-container">
  <canvas id="earth-canvas" width="200" height="200"></canvas>
  <div class="earth-info">
    <div class="climate-stat">
      <span class="stat-label">CO₂:</span>
      <span class="stat-value blink">423 ppm</span>
    </div>
    <div class="climate-stat">
      <span class="stat-label">ΔT:</span>
      <span class="stat-value">+1.5°C</span>
    </div>
  </div>
</div>

<style>
  .pixel-earth-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 2rem;
    background: var(--bg-secondary);
    border: 2px solid var(--accent-blue);
    margin: 2rem 0;
  }

  #earth-canvas {
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
    border: 1px solid var(--text-secondary);
  }

  .earth-info {
    display: flex;
    gap: 2rem;
    font-size: 0.9rem;
  }

  .climate-stat {
    display: flex;
    gap: 0.5rem;
  }

  .stat-label {
    color: var(--text-secondary);
  }

  .stat-value {
    color: var(--accent-blue);
    font-weight: 700;
  }
</style>

<script>
  const canvas = document.getElementById('earth-canvas') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d');

  if (!ctx) throw new Error('Could not get canvas context');

  const width = canvas.width;
  const height = canvas.height;
  const pixelSize = 4;

  // Simple color palette for pixelated earth
  const colors = {
    ocean: '#0000FF',  // Blue
    land: '#00AA00',   // Green
    ice: '#FFFFFF',    // White
    desert: '#CCAA66', // Sand
  };

  let rotation = 0;

  function drawPixelatedEarth() {
    // Clear canvas
    ctx.fillStyle = '#000000';
    ctx.fillRect(0, 0, width, height);

    const centerX = width / 2;
    const centerY = height / 2;
    const radius = 80;

    // Draw pixelated circle (earth)
    for (let y = 0; y < height; y += pixelSize) {
      for (let x = 0; x < width; x += pixelSize) {
        const dx = x - centerX;
        const dy = y - centerY;
        const distance = Math.sqrt(dx * dx + dy * dy);

        if (distance < radius) {
          // Inside earth
          const angle = Math.atan2(dy, dx) + rotation;
          const normalizedAngle = ((angle + Math.PI) / (2 * Math.PI)) % 1;

          // Simple pattern: alternate ocean and land based on angle and distance
          let color;
          if (distance > radius * 0.95) {
            color = colors.ice; // Ice caps at edges
          } else if (Math.sin(normalizedAngle * 12) > 0.3) {
            color = colors.land;
          } else if (Math.sin(normalizedAngle * 8 + distance * 0.1) > 0.6) {
            color = colors.desert;
          } else {
            color = colors.ocean;
          }

          ctx.fillStyle = color;
          ctx.fillRect(x, y, pixelSize, pixelSize);
        }
      }
    }
  }

  // Animation loop
  function animate() {
    rotation += 0.005; // Slow rotation
    drawPixelatedEarth();
    requestAnimationFrame(animate);
  }

  // Start animation
  animate();
</script>
