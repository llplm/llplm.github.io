---
// Pixelated rotating Earth component
---

<div class="pixel-earth-container">
  <canvas id="earth-canvas"></canvas>
  <div class="earth-info">
    <div class="climate-stat">
      <span class="stat-label">CO₂:</span>
      <span class="stat-value blink">423 ppm</span>
    </div>
    <div class="climate-stat">
      <span class="stat-label">ΔT:</span>
      <span class="stat-value">+1.5°C</span>
    </div>
  </div>
</div>

<style>
  .pixel-earth-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 2rem;
    background: var(--bg-secondary);
    border: 2px solid var(--accent-blue);
    margin: 2rem 0;
  }

  #earth-canvas {
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
    border: 1px solid var(--text-secondary);
    width: 100%;
    max-width: 200px;
    height: auto;
    aspect-ratio: 1;
  }

  .earth-info {
    display: flex;
    gap: 2rem;
    font-size: 0.9rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .climate-stat {
    display: flex;
    gap: 0.5rem;
  }

  .stat-label {
    color: var(--text-secondary);
  }

  .stat-value {
    color: var(--accent-blue);
    font-weight: 700;
  }

  @media (max-width: 640px) {
    .pixel-earth-container {
      padding: 1.5rem;
      gap: 0.75rem;
    }

    #earth-canvas {
      max-width: 160px;
    }

    .earth-info {
      gap: 1.5rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 400px) {
    .pixel-earth-container {
      padding: 1rem;
    }

    #earth-canvas {
      max-width: 140px;
    }

    .earth-info {
      gap: 1rem;
      font-size: 0.8rem;
    }
  }
</style>

<script>
  const canvas = document.getElementById('earth-canvas') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d');

  if (!ctx) throw new Error('Could not get canvas context');

  // Make canvas responsive
  function resizeCanvas() {
    const container = canvas.parentElement;
    if (!container) return;

    const size = Math.min(
      container.clientWidth - 40,  // Account for padding
      200  // Max size
    );

    canvas.width = size;
    canvas.height = size;
  }

  // Initial size
  resizeCanvas();

  // Resize on window resize (debounced)
  let resizeTimeout: number;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = window.setTimeout(resizeCanvas, 150);
  });

  const pixelSize = 4;

  // Simple color palette for pixelated earth
  const colors = {
    ocean: '#0000FF',  // Blue
    land: '#00AA00',   // Green
    ice: '#FFFFFF',    // White
    desert: '#CCAA66', // Sand
  };

  let rotation = 0;

  function drawPixelatedEarth() {
    const width = canvas.width;
    const height = canvas.height;

    // Clear canvas
    ctx.fillStyle = '#000000';
    ctx.fillRect(0, 0, width, height);

    const centerX = width / 2;
    const centerY = height / 2;
    const radius = Math.min(width, height) * 0.4;  // Scale radius with canvas

    // Draw pixelated circle (earth)
    for (let y = 0; y < height; y += pixelSize) {
      for (let x = 0; x < width; x += pixelSize) {
        const dx = x - centerX;
        const dy = y - centerY;
        const distance = Math.sqrt(dx * dx + dy * dy);

        if (distance < radius) {
          // Inside earth
          const angle = Math.atan2(dy, dx) + rotation;
          const normalizedAngle = ((angle + Math.PI) / (2 * Math.PI)) % 1;

          // Simple pattern: alternate ocean and land based on angle and distance
          let color;
          if (distance > radius * 0.95) {
            color = colors.ice; // Ice caps at edges
          } else if (Math.sin(normalizedAngle * 12) > 0.3) {
            color = colors.land;
          } else if (Math.sin(normalizedAngle * 8 + distance * 0.1) > 0.6) {
            color = colors.desert;
          } else {
            color = colors.ocean;
          }

          ctx.fillStyle = color;
          ctx.fillRect(x, y, pixelSize, pixelSize);
        }
      }
    }
  }

  // Animation loop
  function animate() {
    rotation += 0.005; // Slow rotation
    drawPixelatedEarth();
    requestAnimationFrame(animate);
  }

  // Start animation
  animate();
</script>
