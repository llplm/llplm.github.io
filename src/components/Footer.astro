---
const socialLinks = [
  { href: 'https://github.com/llplm', label: 'github', icon: 'github' },
  { href: 'https://gitlab.earth.bsc.es/lpalma', label: 'gitlab', icon: 'gitlab' },
  { href: 'https://twitter.com/lluispalma', label: 'twitter', icon: 'twitter' },
  { href: 'https://lluispalma.bsky.social', label: 'bluesky', icon: 'bluesky' },
  { href: 'https://scholar.google.com/citations?user=ZW04e3AAAAAJ', label: 'scholar', icon: 'scholar' },
  { href: 'https://orcid.org/0000-0002-3284-2152', label: 'orcid', icon: 'orcid' },
];

const currentYear = new Date().getFullYear();
const startYear = 2018;
const yearsActive = currentYear - startYear;

// SVG icons for social platforms
const icons = {
  github: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>',
  gitlab: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z"></path></svg>',
  twitter: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>',
  bluesky: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"></path><path d="M12 12v8"></path></svg>',
  scholar: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path><path d="M12 6v6l4 2"></path></svg>',
  orcid: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M8 12h8"></path><path d="M12 8v8"></path></svg>',
};
---

<footer class="footer">
  <div class="container">
    <!-- Social links -->
    <div class="social-links">
      {socialLinks.map(({ href, label, icon }) => (
        <a href={href} target="_blank" rel="noopener noreferrer" class="social-link retro-border">
          <span class="social-icon" set:html={icons[icon as keyof typeof icons]} />
          <span class="social-label">{label}</span>
        </a>
      ))}
    </div>

    <!-- Footer info -->
    <div class="footer-info">
      <p>
        ©{currentYear} Lluís Palma
      </p>
      <p class="tech-stack">
        Built with <a href="https://astro.build" target="_blank">Astro</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: 4rem;
    padding: 3rem 0 2rem;
    border-top: 2px solid var(--text-primary);
    background: var(--bg-secondary);
  }

  .climate-ascii {
    text-align: center;
    margin-bottom: 2rem;
  }

  .ascii-earth {
    display: inline-block;
    font-size: 0.7rem;
    line-height: 1.2;
    color: var(--accent-blue);
    font-family: var(--font-mono);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.85rem;
    transition: transform 0.2s ease;
  }

  .social-link:hover {
    transform: translateY(-2px);
    text-decoration: none;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent-blue);
  }

  .social-icon svg {
    display: block;
    width: 18px;
    height: 18px;
  }

  .footer-info {
    text-align: center;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .footer-info p {
    margin-bottom: 0.5rem;
  }

  .separator {
    margin: 0 0.5rem;
    opacity: 0.5;
  }

  .tech-stack a {
    color: var(--accent-blue);
  }

  @media (max-width: 768px) {
    .ascii-earth {
      font-size: 0.5rem;
    }

    .social-links {
      gap: 0.5rem;
    }

    .social-link {
      padding: 0.4rem 0.8rem;
      font-size: 0.75rem;
    }
  }
</style>
