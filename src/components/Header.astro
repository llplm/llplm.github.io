---
const navItems = [
  { href: '/', label: 'about' },
  { href: '/publications', label: 'publications' },
  { href: '/blog', label: 'blog' },
  { href: '/cv', label: 'cv' },
  { href: '/photo', label: 'photo' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <div class="nav-brand">
        <a href="/">
          <span class="bracket">&lt;</span>lluís<span class="slash">/</span>palma<span class="bracket">&gt;</span>
        </a>
      </div>

      <!-- Checkbox for hamburger toggle (hidden) -->
      <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-label="Toggle navigation" />

      <!-- Hamburger icon -->
      <label for="nav-toggle" class="hamburger" aria-label="Menu">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </label>

      <!-- Navigation menu -->
      <ul class="nav-links">
        {navItems.map(({ href, label }) => (
          <li>
            <a
              href={href}
              class={currentPath === href ? 'active' : ''}
            >
              {label}
            </a>
          </li>
        ))}
      </ul>

      <button
        onclick="toggleTheme()"
        class="theme-toggle retro-button"
        aria-label="Toggle theme"
      >
        <span class="theme-icon">◐</span>
      </button>
    </nav>
  </div>
</header>

<style>
  .header {
    padding: 1rem 0;
    border-bottom: 2px solid var(--text-primary);
    background: var(--bg-primary);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    position: relative;
  }

  .nav-brand a {
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--text-secondary);
    text-decoration: none;
  }

  .bracket {
    color: var(--accent-blue);
    opacity: 0.8;
  }

  .slash {
    color: var(--accent-blue);
    opacity: 0.6;
    margin: 0 0.1em;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    flex: 1;
    justify-content: center;
    margin: 0;
  }

  .nav-links a {
    color: var(--text-primary);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .nav-links a:hover,
  .nav-links a.active {
    border-bottom-color: var(--accent-blue);
  }

  .theme-toggle {
    padding: 0.5rem 0.75rem;
  }

  .theme-icon {
    font-size: 1.2rem;
  }

  /* Hide hamburger and checkbox on desktop */
  .hamburger,
  .nav-toggle {
    display: none;
  }

  /* MOBILE STYLES - Hamburger Menu */
  @media (max-width: 768px) {
    .header {
      padding: 0.75rem 0;
    }

    .nav {
      flex-wrap: wrap;
      gap: 0;
    }

    .nav-brand {
      flex: 1;
      z-index: 102;
    }

    .nav-brand a {
      font-size: 1.25rem;
    }

    /* Show hamburger icon */
    .hamburger {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 28px;
      height: 22px;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0;
      z-index: 102;
      order: 2;
    }

    .hamburger-line {
      display: block;
      width: 100%;
      height: 3px;
      background-color: var(--accent-blue);
      transition: all 0.3s ease;
      transform-origin: center;
    }

    /* Theme toggle repositioning */
    .theme-toggle {
      order: 3;
      padding: 0.4rem 0.6rem;
      z-index: 102;
    }

    .theme-icon {
      font-size: 1rem;
    }

    /* Navigation links - hidden by default */
    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      flex-direction: column;
      background: var(--bg-primary);
      border-bottom: 2px solid var(--text-primary);
      border-top: 1px solid var(--text-secondary);
      gap: 0;
      padding: 0;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease, padding 0.3s ease;
      order: 4;
      flex-basis: 100%;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .nav-links li {
      width: 100%;
      border-bottom: 1px solid var(--text-secondary);
    }

    .nav-links li:last-child {
      border-bottom: none;
    }

    .nav-links a {
      display: block;
      padding: 1rem 1.5rem;
      border-bottom: none;
      text-align: left;
      width: 100%;
    }

    .nav-links a:hover,
    .nav-links a.active {
      background: var(--accent-blue-light);
      border-bottom: none;
      border-left: 3px solid var(--accent-blue);
    }

    /* Show menu when checkbox is checked */
    .nav-toggle:checked ~ .nav-links {
      max-height: 400px;
      padding: 0.5rem 0;
    }

    /* Animate hamburger to X when open */
    .nav-toggle:checked ~ .hamburger .hamburger-line:nth-child(1) {
      transform: translateY(9.5px) rotate(45deg);
    }

    .nav-toggle:checked ~ .hamburger .hamburger-line:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle:checked ~ .hamburger .hamburger-line:nth-child(3) {
      transform: translateY(-9.5px) rotate(-45deg);
    }
  }

  /* Ultra-small phones - further optimization */
  @media (max-width: 400px) {
    .nav-brand a {
      font-size: 1.1rem;
    }

    .nav-links a {
      padding: 0.875rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
