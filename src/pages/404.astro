---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Not Found">
  <div class="error-page">
    <div class="error-content retro-border">
      <h1 class="error-code glitch-text">404</h1>
      <h2>Page Not Found</h2>
      <p class="error-message">
        The page you're looking for doesn't exist in this climate data simulation.
      </p>

      <div class="error-visual">
        <pre class="ascii-error">
    ⚠️  ERROR  ⚠️

  [████████░░] 80%

  CLIMATE DATA NOT FOUND

  COORDINATES INVALID
        </pre>
      </div>

      <div class="error-actions">
        <a href="/" class="retro-button">
          ← Back to Home
        </a>
        <a href="/publications" class="retro-button">
          View Publications
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    min-height: clamp(400px, 50vh, 60vh);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
  }

  .error-content {
    text-align: center;
    padding: 3rem 2rem;
    max-width: 600px;
  }

  .error-code {
    font-size: clamp(3rem, 10vw, 6rem);
    margin-bottom: 1rem;
    color: var(--accent-blue);
  }

  .error-message {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 2rem 0;
  }

  .ascii-error {
    font-size: 0.8rem;
    color: var(--accent-blue);
    margin: 2rem 0;
    padding: 1rem;
    background: var(--bg-secondary);
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .error-page {
      min-height: clamp(350px, 40vh, 50vh);
    }

    .error-actions {
      flex-direction: column;
    }
  }

  @media (max-width: 400px) {
    .error-content {
      padding: 2rem 1rem;
    }

    .error-message {
      font-size: 1rem;
    }

    .ascii-error {
      font-size: 0.7rem;
      padding: 0.75rem;
    }
  }
</style>
